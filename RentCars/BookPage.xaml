<Page 
      x:Class="RentCars.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    WindowWidth="1000"
      WindowTitle="Аренда автомобилей" Title="Аренда автомобилей"  Background="White">
    <Grid>
        <DockPanel >

            <DockPanel DockPanel.Dock="Top" LastChildFill="False" Background="LightBlue">
                <Button DockPanel.Dock="Left" Content="Автомобили" Margin="10,10"  Padding="10,2" Click="ShowCars"/>
                <Button DockPanel.Dock="Left" Content="Условия аренды" Margin="10,10" Padding="10,2" Click="ShowInfo"/>
            </DockPanel>
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Margin="10">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Height="200" Width="250" Orientation="Vertical" >
                        <Label  Margin="10" DockPanel.Dock="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Модель</Label>
                        <Image Source="Resources/Caddy.jpg" Margin="10,0" />

                    </StackPanel>
                    <Button  Margin="10" DockPanel.Dock="Bottom" Padding="10"   VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Забронировать</Button>
                </DockPanel>
            </Border>

            
            
        </DockPanel>

    </Grid>
</Page>